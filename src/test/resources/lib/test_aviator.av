fn test_static_methods() {
  tests = tests + 1;
  use java.util.regex.Pattern;
  
  let p = Pattern.compile("\\d+");
  j.assertEquals("pattern", type(p));
  j.assertTrue("3"=~p);
  j.assertTrue("400"=~p);
  j.assertFalse("a"=~p);
  
  let l = Long.parseLong("3");
  j.assertEquals("long", type(l));
  j.assertEquals(3, l);
}

